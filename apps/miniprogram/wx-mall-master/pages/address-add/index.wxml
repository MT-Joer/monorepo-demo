<view class="container">
	<form bind:submit="bindSave" report-submit>
		<view class="form-box">
			<view class="row-wrap">
				<view class="label">联系人</view>
				<view class="label-right">
					<input
						name="linkMan"
						class="input"
						type="text"
						placeholder="姓名"
						value="{{addressData.linkMan}}{{wxaddress.userName}}"
					/>
				</view>
			</view>
			<view />
			<view class="row-wrap">
				<view class="label">手机号码</view>
				<view class="label-right">
					<input name="mobile"
						class="input"
						maxlength="11"
						type="number"
						placeholder="11位手机号码"
						value="{{addressData.mobile}}{{wxaddress.telNumber}}"
					/>
				</view>
			</view>
			<view class="row-wrap">
				<view class="label">选择地区</view>
				<view class="showRegionSelect" bind:tap="showRegionSelect"
					>{{showRegionStr}}</view
				>
			</view>
			<view class="addr-details">
				<view class="label">详细地址</view>
				<view class="label-right">
					<textarea
						name="address"
						auto-height
						placeholder="街道门牌信息"
						value="{{addressData.address}}{{wxaddress.detailInfo}}"
					/>
				</view>
			</view>
		</view>
		<button type="warn" class="save-btn" formType="submit">保存</button>
		<button type="default" class="save-btn"
			bind:tap="deleteAddress"
			data-id="{{addressData.id}}"
			wx:if="{{addressData}}">
			删除该地址
		</button>
	</form>
</view>
<float-menu />
<region-picker
	wx:if="{{ showRegionSelect }}"
	bind:closeAddress="closeAddress"
	bind:selectAddress="selectAddress"
/>
